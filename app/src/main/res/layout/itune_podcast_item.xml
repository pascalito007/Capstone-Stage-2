<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/ten_dp">

    <ImageView
        android:id="@+id/podcast_img"
        android:layout_width="@dimen/seventy_five_dp"
        android:layout_height="@dimen/seventy_five_dp"
        android:scaleType="fitXY"
        android:src="@drawable/header"
        android:contentDescription="@string/podcast_image_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/five_dp"
        android:id="@+id/podcast_title"
        android:text="@string/podcast_placeholder_title"
        app:layout_constraintBottom_toBottomOf="@+id/podcast_img"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/podcast_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/podcast_img" />
</android.support.constraint.ConstraintLayout>