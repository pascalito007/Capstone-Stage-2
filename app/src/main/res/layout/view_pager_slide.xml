<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/podcast_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/podcast_img"
        app:layout_collapseMode="pin" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/podcast_img_clean"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/podcast_img" />

        <TextView
            android:id="@+id/podcast_cover_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/podcast_img_clean"
            android:layout_toRightOf="@+id/podcast_img_clean"
            android:text="Par Jupiter"
            android:textColor="@color/md_white_1000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/podcast_cover_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/podcast_cover_title"
            android:layout_alignRight="@+id/podcast_cover_title"
            android:layout_below="@+id/podcast_cover_title"
            android:layout_marginTop="10dp"
            android:text="Franc Inter"
            android:textColor="@color/md_white_1000"
            android:textSize="16sp" />
    </RelativeLayout>

</FrameLayout>