<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="capstone.nanodegree.udacity.com.mypodcast">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:name=".utils.AppConfig"
        android:allowBackup="true"
        android:icon="@mipmap/ic_podcast_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_podcast_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity_"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.FetchItunePodcastActivity_"
            android:label="@string/title_activity_fetch_itune"
            android:parentActivityName=".MainActivity_"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="capstone.nanodegree.udacity.com.mypodcast.MainActivity_" />
        </activity>
        <activity
            android:name=".activity.EpisodeActivity_"
            android:label="@string/title_activity_fetch_itune_episode"
            android:parentActivityName=".activity.FetchItunePodcastActivity_"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="capstone.nanodegree.udacity.com.mypodcast.activity.FetchItunePodcastActivity_" />
        </activity>
        <activity
            android:name=".activity.FetchGpodderMainActivity_"
            android:label="@string/title_activity_fetch_gpodder_main"
            android:parentActivityName=".MainActivity_"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="capstone.nanodegree.udacity.com.mypodcast.MainActivity_" />
        </activity>

        <provider
            android:name=".provider.EpisodeProvider"
            android:authorities="capstone.nanodegree.udacity.com.mypodcast.episode"
            android:exported="false" />
        <provider
            android:name=".provider.PodcastProvider"
            android:authorities="capstone.nanodegree.udacity.com.mypodcast.podcast"
            android:exported="false" />

        <service
            android:name=".service.PodcastSyncIntentService"
            android:exported="false" />
        <service
            android:name=".service.PodcastFirebaseJobService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE" />
            </intent-filter>
        </service>
        <service
            android:name=".service.DownloadService"
            android:exported="false" />

        <activity
            android:name=".activity.PlayMediaActivity_"
            android:label="@string/title_activity_play_media"
            android:launchMode="singleTop"
            android:parentActivityName=".activity.EpisodeActivity_"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="capstone.nanodegree.udacity.com.mypodcast.activity.EpisodeActivity_" />
        </activity>

        <receiver android:name=".activity.PlayMediaActivity$MediaReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".activity.EpisodeDetailsActivity_"
            android:label="@string/title_activity_episode_details"
            android:parentActivityName=".MainActivity_"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="capstone.nanodegree.udacity.com.mypodcast.MainActivity_" />
        </activity>
        <activity
            android:name=".activity.FetchGpodderCategoryPodcastActivity_"
            android:label="@string/title_activity_fetch_gpodder_category_podcast"
            android:parentActivityName=".activity.FetchGpodderMainActivity_"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="capstone.nanodegree.udacity.com.mypodcast.activity.FetchGpodderMainActivity_" />
        </activity>

        <receiver android:name=".PlayerWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/player_widget_info" />
        </receiver>
    </application>

</manifest>